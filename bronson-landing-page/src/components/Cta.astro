      <!-- Trust indicators -->
      <div class="mt-6 flex items-center justify-center space-x-6 text-sm text-gray-500">
        <div class="flex items-center space-x-2">
          <svg class="w-4 h-4 text-[#00ffe0]" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2z" clip-rule="evenodd"></path>
          </svg>
          <span>100% Seguro</span>
        </div>
        
        <div class="flex items-center space-x-2">
          <svg class="w-4 h-4 text-[#00ffe0]" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Sin Spam</span>
        </div>
        
        <div class="flex items-center space-x-2">
          <svg class="w-4 h-4 text-[#00ffe0]" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span>Descarga InstantÃ¡nea</span>
        </div>
      </div>

      <!-- Social proof -->
      <p class="mt-8 text-gray-500 text-sm">
        <strong class="text-black">+15,000</strong> emprendedores ya lo descargaron
      </p>
    </div>
  </div>
</section>
